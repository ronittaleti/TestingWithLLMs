[
  {
    "test_case_id": "TC-001",
    "title": "Set Alarm Time - Valid Time AM",
    "description": "Verify setting an alarm with a valid time in AM.",
    "preconditions": [
      "DeskClock app is launched and TimePicker is displayed."
    ],
    "steps": [
      {
        "step_number": 1,
        "action": "Click on the hour '3'.",
        "element": {
          "type": "android.view.View",
          "identifier": "com.google.android.deskclock:id/material_hour_tv",
          "value": "03"
        },
        "expected_result": "Hour is selected as 3."
      },
      {
        "step_number": 2,
        "action": "Click on the AM button.",
        "element": {
          "type": "android.widget.CompoundButton",
          "identifier": "com.google.android.deskclock:id/material_clock_period_am_button",
          "value": "AM"
        },
        "expected_result": "AM is selected."
      },
      {
        "step_number": 3,
        "action": "Click on the OK button.",
        "element": {
          "type": "android.widget.Button",
          "identifier": "com.google.android.deskclock:id/material_timepicker_ok_button",
          "value": "OK"
        },
        "expected_result": "Alarm is set for 3:00 AM."
      }
    ],
    "assertions": [
      "Alarm is successfully set for 3:00 AM. Verify in the alarm list."
    ],
    "priority": "High",
    "test_type": "Functional",
    "tags": [
      "alarm",
      "time",
      "AM"
    ]
  },
